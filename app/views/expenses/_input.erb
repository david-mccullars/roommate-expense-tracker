<script>
$(document).on('ready page:load', function() {
  $('#new_expense_add button').click(function() {
    $('#new_expense_add').hide();
    $('#new_expense_form').show();
    return false;
  });
  $('#new_expense_form .button.cancel').click(function() {
    $('#new_expense_form').hide();
    $('#new_expense_add').show();
    return false;
  });
});
</script>
<div id="new_expense_add">
  <button kind="add" type="button"><span>+</span></button>
</div>
<div id="new_expense_form">
  <div class="box box_rounded">
    <div class="box_body">
      <%= form_for(:expense) do |f| %>
        <div class="field_label">
          <%= f.label :event_date, 'Expense Date' %>
        </div>
        <div class="field_label">
          <%= f.date_field :event_date, value: Date.today, autocapitalize: 'off', autocorrect: 'off', autofocus: 'autofocus', class: 'input_text', size: 30, tabindex: 1 %>
        </div>
        <div class="field_label">
          <%= f.label :description, 'Description' %>
        </div>
        <div class="field_label">
          <%= f.text_field :description, autocapitalize: 'off', autocorrect: 'off', autofocus: 'autofocus', class: 'input_text', size: 30, tabindex: 2 %>
        </div>
        <div class="field_label">
          <%= f.label :amount, 'Amount $' %>
        </div>
        <div class="field_label">
          <%= f.number_field :amount, step: 0.01, autocapitalize: 'off', autocorrect: 'off', autofocus: 'autofocus', class: 'input_text', size: 30, tabindex: 3 %>
        </div>
        <div class="field_label">
          <%= f.label :shared, 'Shared Expense?', class: 'clickable' %>
          <%= f.check_box :shared, { autofocus: 'autofocus', class: 'input_check_box clickable', tabindex: 4, checked: true }, 't', 'f' %>
        </div>
        <div class="field_label">
          <%= f.submit 'Add Expense', class: 'button inline add', tabindex: 5 %>
          <%= f.button 'Cancel', class: 'button inline cancel', tabindex: 6 %>
          <div style="clear: both"></div>
        </div>
      <% end %>
    </div>
  </div>
</div>
